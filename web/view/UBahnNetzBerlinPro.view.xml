<mvc:View controllerName="de.htwberlin.adbkt.basic1.controller.UBahnNetzBerlinPro" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:c="sap.ui.commons"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core">
	<Page id="outboundHDB" 
		title="{i18n>unetzProTeitle}" 
		class="sapUiResponsiveContentPadding" 
		showNavButton="true" 
		navButtonPress="onNavBack">
		<content>
			<VBox>
				<!-- Form zur User Eingabe -->
				<List headerText="Aufgabe 4: ">
					
					<InputListItem label="Gib Dein Weg ein!">
						<Input id="address" placeholder="Adresse" value="Treskowallee 8, Berlin"/>
					</InputListItem>
					<InputListItem label="Suche">
						<Button text="Los aus HDB" press="onFindButtonPress_Re"/>
					</InputListItem>
				</List>
				<TextArea id="log" value="leer" width="10cm" rows="8"/>
				<!-- Here Map Container -->
				<HBox id="map" fitContainer="true" height="500px"></HBox>
			</VBox>
		</content>
	</Page>
</mvc:View>